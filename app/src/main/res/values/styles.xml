<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="TickerStyle">@style/HeartbeatTicker</item>
        <item name="ExperienceBarStyle">@style/ExperienceBar</item>
        <item name="vpiTitlePageIndicatorStyle">@style/ViewPagerIndicatorStyle</item>
    </style>

    <style name="HeartbeatTicker" parent="@style/Base.Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/turn_ticker_style</item>
    </style>

    <style name="ExperienceBar" parent="@style/Base.Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/experience_bar</item>
    </style>

    <style name="ViewPagerIndicatorStyle">
        <item name="android:background">@color/primary</item>
        <item name="selectedColor">@android:color/white</item>
        <item name="footerColor">@color/accent</item>
        <item name="footerLineHeight">0dp</item>
    </style>

</resources>
