<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:contentPadding="4dp">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="4dp"
                android:id="@+id/frameLayout">
            <ImageView
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/notification_close"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:id="@+id/ivArchievmentIcon"/>

        </FrameLayout>


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:text="Title"
                android:id="@+id/tvArchievmentTitle"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/frameLayout"
                android:layout_toEndOf="@+id/frameLayout"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:text="message"
                android:id="@+id/tvArchievmentMessage"
                android:layout_below="@+id/tvArchievmentTitle"
                android:layout_toRightOf="@+id/frameLayout"
                android:layout_toEndOf="@+id/frameLayout"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:text="Reward"
                android:id="@+id/tvArchievmentReward"
                android:layout_below="@+id/tvArchievmentMessage"
                android:layout_alignLeft="@+id/tvArchievmentMessage"
                android:layout_alignStart="@+id/tvArchievmentMessage"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>